<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lapisan untuk gradient transparan di atas -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#00000000"
            android:endColor="#00000000"
            android:startColor="#111111"
            android:type="linear"/>
        </shape>
    </item>
    <!-- Lapisan untuk warna solid di bawah -->
    <item android:top="20dp"> <!-- Sesuaikan top sesuai dengan tinggi area transparan yang diinginkan -->
        <shape>
            <solid android:color="#111111"/>
        </shape>
    </item>
</layer-list>
